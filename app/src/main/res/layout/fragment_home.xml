<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        
        <Button
            android:id="@+id/connectButton"
            android:layout_centerHorizontal="true"
            android:text="@string/action_bluetooth_connect"
            android:drawableLeft="@drawable/ic_action_bluetooth"
            style="@style/LargeButton" />

        <TextView
            android:id="@+id/heartRateTextView"
            android:layout_below="@+id/connectButton"
            android:drawableLeft="@drawable/ic_heart_rate"
            android:hint="@string/heartRate"
            style="@style/HomeTextView" />

        <View
            android:id="@+id/divider1"
            android:layout_below="@+id/heartRateTextView"
            style="@style/Divider" />

        <TextView
            android:id="@+id/rRIntervalTextView"
            android:layout_below="@+id/divider1"
            android:drawableLeft="@drawable/ic_rr_interval"
            android:hint="@string/rRInterval"
            style="@style/HomeTextView" />

        <View
            android:id="@+id/divider2"
            android:layout_below="@+id/rRIntervalTextView"
            style="@style/Divider" />

        <TextView
            android:id="@+id/instantHeartRateTextView"
            android:layout_below="@+id/divider2"
            android:drawableLeft="@drawable/ic_instant_heart_rate"
            android:hint="@string/instantHeartRate"
            style="@style/HomeTextView" />

        <View
            android:id="@+id/divider3"
            android:layout_below="@+id/instantHeartRateTextView"
            style="@style/Divider" />
        
        <TextView
            android:id="@+id/instantSpeedTextView"
            android:layout_below="@+id/divider3"
            android:drawableLeft="@drawable/ic_instant_speed"
            android:hint="@string/instantSpeed"
            style="@style/HomeTextView" />

        <View
            android:id="@+id/divider4"
            android:layout_below="@+id/instantSpeedTextView"
            style="@style/Divider" />

        <Button
            android:id="@+id/musicButton"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/divider4"
            android:text="@string/music"
            android:drawableLeft="@drawable/ic_action_play"
            style="@style/LargeButton" />
		
    </RelativeLayout>

</ScrollView>
