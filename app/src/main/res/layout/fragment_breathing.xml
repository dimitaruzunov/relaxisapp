<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<RelativeLayout
	    android:id="@+id/breathingFragmentLinearLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
	    
	    <Button
	        android:id="@+id/startBreathingButton"
	        android:text="@string/start"
	        android:drawableLeft="@drawable/ic_action_play"
	        android:layout_marginRight="@dimen/activity_horizontal_margin"
	        style="@style/LargeButton" />
	    
	    <TextView
            android:id="@+id/breathingTimeLeftDescTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/startBreathingButton"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/time_left_desc"
            android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView
	        android:id="@+id/breathingTimeLeftTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/breathingTimeLeftDescTextView"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
	    <View
            android:id="@+id/breathingDivider1"
            android:layout_below="@+id/breathingTimeLeftTextView"
            android:layout_toRightOf="@+id/startBreathingButton"
            style="@style/Divider" />
	    
	    <TextView
            android:id="@+id/scoreDescTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/breathingDivider1"
            android:layout_toRightOf="@+id/startBreathingButton"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:visibility="invisible"
            android:text="@string/score_desc"
            android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView
	        android:id="@+id/scoreTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/breathingDivider1"
	        android:layout_toRightOf="@+id/scoreDescTextView"
	        android:visibility="invisible"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
	    <View
            android:id="@+id/breathingDivider2"
            android:layout_below="@+id/scoreTextView"
            style="@style/Divider" />
		
	</RelativeLayout>

</ScrollView>